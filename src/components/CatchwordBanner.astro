---
import { joinClasses } from "../utils/joinClasses";
import { faChevronDown } from "@fortawesome/free-solid-svg-icons";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
type Props = {
  classes: string;
  styles: string;
  catchword: string;
  catchwordSlogan: string;
};

const { classes, styles, catchword, catchwordSlogan } = Astro.props;
---

<div class={joinClasses(classes, "wrapper banner ")} style={styles}>
  <div class="landing-text">
    <h1
      class="text-wrap mt-5"
      data-aos="fade-in"
      data-aos-delay="300"
      data-aos-duration="1000"
    >
      {catchword}
    </h1>
    <h3 class="text-wrap text-2xl mb-2 text-white">
      {catchwordSlogan}
    </h3>
    <a id="down" href="#about" class="text-3xl text-black hover:text-slate-500">
      <FontAwesomeIcon icon={faChevronDown} />
    </a>
  </div>
</div>
